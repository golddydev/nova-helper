{
  "name": "nova-helper",
  "version": "0.0.1",
  "description": "Nova helper module",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "engines": {
    "node": "^18.18.2",
    "npm": ">=10.5"
  },
  "author": "Golddy Dev <firingdev@gmail.com> (http://github.com/golddydev/)",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "rm -rf ./dist && npx tsc && rm -rf ./dist/tests",
    "prettier": "npx prettier -w '**/*.{js,jsx,ts,tsx,json,yml.j2,yml,yaml,.*}'",
    "lint": "concurrently \"npx prettier --check '**/*.{js,jsx,ts,tsx,json,yml.j2,yml,yaml,.*}'\" \"npx eslint . --max-warnings=0\"",
    "test": "npx ava"
  },
  "dependencies": {
    "@blockfrost/blockfrost-js": "^5.5.0",
    "bip39": "^3.1.0",
    "dotenv": "^16.4.5",
    "flatted": "^3.3.1",
    "lodash": "^4.17.21",
    "lucid-cardano": "^0.10.7",
    "ts-res": "^1.1.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.3.2",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "app-root-path": "^3.1.0",
    "ava": "^6.1.3",
    "concurrently": "^8.2.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-ava": "^14.0.0",
    "eslint-plugin-import": "^2.28.1",
    "prettier": "^2.8.8",
    "tsx": "^4.9.3"
  },
  "ava": {
    "files": [
      "src/tests/**/*.test.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=tsx",
      "--no-warnings"
    ]
  }
}
