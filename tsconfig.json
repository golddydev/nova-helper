{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": ["src/**/*", "src/tests/**/*"],
  "exclude": ["node_modules"]
}
